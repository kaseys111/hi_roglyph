<div class="page-header">
  <h1>
    Status comments
    <a href="/status_comments/new" class="btn btn-lg btn-success">New Status comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Status</th>
        <th>Comment</th>
        <th>Commenter</th>
        <th>Actions</th>
      </tr>

      <% @status_comments.each do |status_comment| %>
      <tr>
        <td><%= status_comment.status.status %></td>
        <td><%= status_comment.comment %></td>
        <td><%= status_comment.commenter_id %></td>
        <td>
          <a href="/status_comments/<%= status_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/status_comments/<%= status_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_status_comment/<%= status_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
