<div class="page-header">
  <h3>Status Comment #<%= @status_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Status</dt>
      <dd><%= @status_comment.status_id %></dd>

      <dt>Comment</dt>
      <dd><%= @status_comment.comment %></dd>

      <dt>Commenter</dt>
      <dd><%= @status_comment.commenter_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/status_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/status_comments/<%= @status_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_status_comment/<%= @status_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
