<div class="page-header">
  <h1>
    Status updates
    <a href="/status_updates/new" class="btn btn-lg btn-success">New Status update</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Status</th>
        <th>Poster</th>
        <th>Actions</th>
      </tr>

      <% @status_updates.each do |status_update| %>
      <tr>
        <td><%= status_update.status %></td>
        <td><%= status_update.poster.email %></td>
        <td>
          <a href="/status_updates/<%= status_update.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == status_update.poster %>
            <a href="/status_updates/<%= status_update.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_status_update/<%= status_update.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @status_updates, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
