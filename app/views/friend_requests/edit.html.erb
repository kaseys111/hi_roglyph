<!-- Validation failure messages -->
<% if @friend_request.errors.any? %>
  <% @friend_request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Friend Request #<%= @friend_request.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_friend_request/<%= @friend_request.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for request_sender_id -->
      <div class="form-group">
        <label for="request_sender_id" class="control-label">
          Request sender
        </label>

        <input type="text" id="request_sender_id" name="request_sender_id" placeholder="Request sender" class="form-control" value="<%= @friend_request.request_sender_id %>">
      </div>

      <!-- Label and input for request_receiver_id -->
      <div class="form-group">
        <label for="request_receiver_id" class="control-label">
          Request receiver
        </label>

        <input type="text" id="request_receiver_id" name="request_receiver_id" placeholder="Request receiver" class="form-control" value="<%= @friend_request.request_receiver_id %>">
      </div>

      <button class="btn btn-warning">
        Update Friend Request
      </button>
      or
      <a href="/friend_requests/<%= @friend_request.id %>">Cancel</a>
    </form>
  </div>
</div>
